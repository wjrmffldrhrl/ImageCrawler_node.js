doctype html
html
    head
        meta(charset='utf-8')
        title IMG Crawler
        style
            include ./style.css
        //- script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css", 
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk", crossorigin="anonymous")

    body
        h1 IMG Crawler

        form(action="/target", method="post")
            input(type="text", name="url", placeholder="input target url")
            button.btn.btn-primary(type="submit") Start

        - var tableCnt = -1;
        - var itemIndex = -1;

        div
            form(action="/download",method="post")
                button.btn.btn-primary(type="submit") download Image
                if useAble
                    table
                        each image in content
                            - tableCnt = tableCnt+1
                            - itemIndex = itemIndex+1
                            - table4 = tableCnt%4
                            if table4 == 0
                                tr
                            td
                                div(class="image_item")    
                                    div
                                        img(src=image, width="200", height="200", border="0")
                                    div(class="check_box_div")
                                        input(name="item" type="checkbox" value=image)

                else
                    h2 Not URL
            
